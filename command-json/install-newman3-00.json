  "serialSynchronizedCommands": [
    {
      "description"                : "[sudo] useradd vagrant -s /bin/bash -m -g sudo docker",
      "suppressOutput"             : false,
      "showDiagnostics"            : false,
      "showPreAndPostSpawnMessages": true,
      "outputColor"                : "",
      "useSudo"                    : true,
      "command"                    : "/usr/bin/env",
      "args"                       : [
        "bash",
        "-c",
        "useradd -m -p `perl -e 'printf(\"%s\n\", crypt(\"vagrant\",\"vagrant\"))'` -s /bin/bash vagrant -G sudo,docker"
      ]
    },
    {
      "description"                : "[sudo] Add [nopasswd] to vagrant/sudoer's entry",
      "suppressOutput"             : false,
      "showDiagnostics"            : false,
      "showPreAndPostSpawnMessages": true,
      "useSudo"                    : true,
      "command"                    : "/usr/bin/env",
      "args"                       : [
        "bash",
        "-c",
        "echo \"\nvagrant ALL=(ALL) NOPASSWD: ALL\" >> /etc/sudoers"
      ]
    },
    {
      "description"                : "[sudo] Create /vagrant and chown it to vagrant:vagrant",
      "suppressOutput"             : false,
      "showDiagnostics"            : false,
      "showPreAndPostSpawnMessages": true,
      "useSudo"                    : true,
      "command"                    : "/usr/bin/env",
      "args"                       : [
        "bash",
        "-c",
        "mkdir /vagrant && chown vagrant:vagrant /vagrant"
      ]
    },
    {
      "description"                : "git newman-vm -> /vagrant",
      "suppressOutput"             : false,
      "showDiagnostics"            : false,
      "showPreAndPostSpawnMessages": true,
      "useSudo"                    : false,
      "command"                    : "bash",
      "args"                       : [
        "-c",
        "echo vagrant | sudo -S --user=vagrant -- bash -c 'git clone https://github.com/sotera/newman-vm /vagrant'"
      ]
    },
    {
      "description"                : "git newman-vm -> /vagrant",
      "suppressOutput"             : false,
      "showDiagnostics"            : false,
      "showPreAndPostSpawnMessages": true,
      "useSudo"                    : false,
      "command"                    : "bash",
      "args"                       : [
        "-c",
        "echo vagrant | sudo -S --user=vagrant -- bash -c 'git --work-tree=/vagrant --git-dir=/vagrant/.git checkout v3.x-firmament'"
      ]
    },
    {
      "description"                : "chmod +x -R /vagrant",
      "suppressOutput"             : false,
      "showDiagnostics"            : false,
      "showPreAndPostSpawnMessages": true,
      "useSudo"                    : false,
      "command"                    : "bash",
      "args"                       : [
        "-c",
        "echo vagrant | sudo -S --user=vagrant -- bash -c 'find /vagrant \\( -name \"*.py\" -o -name \"*.sh\" \\) -exec chmod +x {} \\;'"
      ]
    }
  ]
