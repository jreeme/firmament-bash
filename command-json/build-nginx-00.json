{
  "description"               : "Build NginX web server from sources for Ubuntu 16.04 (LTS)",
  "options"                   : {
    "displayExecutionGraphDescription": true
  },
  "asynchronousCommands"      : [
    {
      "description"                : "apt-get install [...]",
      "suppressOutput"             : false,
      "showDiagnostics"            : false,
      "showPreAndPostSpawnMessages": true,
      "useSudo"                    : true,
      "command"                    : "apt-get",
      "args"                       : [
        "install",
        "-y",
        "openssl",
        "libssl-dev",
        "zlib1g",
        "zlib1g-dev",
        "libpcre3",
        "libpcre3-dev"
      ]
    }
  ],
  "serialSynchronizedCommands": [
    {
      "description"                : "Download and expand nginx-stable source",
      "suppressOutput"             : false,
      "showDiagnostics"            : false,
      "showPreAndPostSpawnMessages": true,
      "useSudo"                    : false,
      "command"                    : "bash",
      "args"                       : [
        "-c",
        "'curl http://nginx.org/download/nginx-1.12.2.tar.gz | tar xz -C /usr/local/hadoop'"
      ]
    }
  ]
}
