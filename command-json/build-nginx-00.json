{
  "description"               : "Build NginX web server from sources for Ubuntu 16.04 (LTS)",
  "prerequisiteGraphUri"      : "build-nginx-01.json",
  "options"                   : {
    "displayExecutionGraphDescription": true
  },
  "asynchronousCommands"      : [
    {
      "description"                : "apt-get install [...]",
      "suppressOutput"             : false,
      "showDiagnostics"            : false,
      "showPreAndPostSpawnMessages": true,
      "useSudo"                    : true,
      "command"                    : "apt-get",
      "args"                       : [
        "install",
        "-y",
        "openssl",
        "libssl-dev",
        "zlib1g",
        "zlib1g-dev",
        "libpcre3",
        "libpcre3-dev"
      ]
    },
    {
      "description"                : "[sudo] Add [nopasswd] to nginx/sudoer's entry",
      "suppressOutput"             : false,
      "showDiagnostics"            : false,
      "showPreAndPostSpawnMessages": true,
      "useSudo"                    : true,
      "sudoPassword"               : "password",
      "command"                    : "/usr/bin/env",
      "args"                       : [
        "bash",
        "-c",
        "echo \"\nnginx ALL=(ALL) NOPASSWD: ALL\" >> /etc/sudoers"
      ]
    },
    {
      "description"                : "[sudo] adduser nginx sudo",
      "suppressOutput"             : false,
      "showDiagnostics"            : false,
      "showPreAndPostSpawnMessages": true,
      "outputColor"                : "",
      "useSudo"                    : false,
      "command"                    : "bash",
      "args"                       : [
        "-c",
        "echo password | sudo -S -- bash -c 'adduser nginx sudo'"
      ]
    }
  ],
  "serialSynchronizedCommands": [
    {
      "description"                : "Download and expand nginx-stable source",
      "suppressOutput"             : false,
      "showDiagnostics"            : false,
      "showPreAndPostSpawnMessages": true,
      "useSudo"                    : false,
      "command"                    : "bash",
      "args"                       : [
        "-c",
        "echo password | sudo --user=nginx -S -- bash -c 'curl http://nginx.org/download/nginx-1.12.2.tar.gz | tar xz -C /home/nginx'"
      ]
    }
  ]
}
