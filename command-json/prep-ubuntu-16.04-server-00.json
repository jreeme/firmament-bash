{
  "description": "Prepare base Ubuntu 16.04 server for firmament-docker deploys",
  "prerequisiteGraphUri": "prep-ubuntu-16.04-server-01.json",
  "options": {
    "displayExecutionGraphDescription": true
  },
  "asynchronousCommands": [
    {
      "description": "[sudo] apt-get install ...",
      "suppressOutput": false,
      "showDiagnostics": false,
      "showPreAndPostSpawnMessages": true,
      "useSudo": true,
      "command": "apt-get",
      "args": [
        "install",
        "-y",
        "apt-transport-https",
        "ca-certificates",
        "software-properties-common"
      ]
    },
    {
      "description": "[sudo] npm install -g strongloop",
      "suppressOutput": false,
      "showDiagnostics": false,
      "showPreAndPostSpawnMessages": true,
      "useSudo": true,
      "command": "npm",
      "args": [
        "install",
        "-g",
        "strongloop"
      ]
    }
  ],
  "serialSynchronizedCommands": [
    {
      "description": "curl -fsSL https://download.docker.com/linux/ubuntu/gpg | sudo apt-key add -",
      "suppressOutput": false,
      "showDiagnostics": false,
      "showPreAndPostSpawnMessages": true,
      "useSudo": true,
      "command": "/usr/bin/env",
      "args": [
        "bash",
        "-c",
        "curl -fsSL https://download.docker.com/linux/ubuntu/gpg | apt-key add -"
      ]
    },
    {
      "description"                : "keep testing",
      "suppressOutput"             : false,
      "showDiagnostics"            : false,
      "showPreAndPostSpawnMessages": true,
      "useSudo"                    : true,
      "command"                    : "/usr/bin/env",
      "args"                       : [
        "bash",
        "-c",
        "add-apt-repository \"deb [arch=amd64] https://download.docker.com/linux/ubuntu $(lsb_release -cs) stable\""
      ]
    },
    {
      "description": "[sudo] apt-get update",
      "suppressOutput": false,
      "showDiagnostics": false,
      "showPreAndPostSpawnMessages": true,
      "useSudo": true,
      "command": "apt-get",
      "args": [
        "update"
      ]
    },
    {
      "description": "[sudo] apt-get install docker-ce",
      "suppressOutput": false,
      "showDiagnostics": false,
      "showPreAndPostSpawnMessages": true,
      "useSudo": true,
      "command": "apt-get",
      "args": [
        "install",
        "-y",
        "docker-ce"
      ]
    },
    {
      "description": "usermod -aG docker <me>",
      "suppressOutput": false,
      "showDiagnostics": false,
      "showPreAndPostSpawnMessages": true,
      "useSudo": false,
      "command": "/usr/bin/env",
      "args": [
        "bash",
        "-c",
        "sudo usermod -aG docker $USER"
      ]
    }
  ]
}
